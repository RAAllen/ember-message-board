{{#if addNewAnswer}}
  <h2>Answer the Question</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="answer">Your Answer:</label>
        {{input value=answer id="answer"}}
      </div>
      <div class="form-group">
        <label for="author">Your Name:</label>
        {{input value=author id="author"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'showAddNewAnswer'}}>Answer</button>
{{/if}}
