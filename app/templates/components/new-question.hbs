<form>
  <div class="form-group">
    <label for="question">Enter your question:</label>
    {{input value=question id="question"}}
  </div>
  <div class="form-group">
    <label for="author">Your name:</label>
    {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="details">Add additional details here:</label>
    {{input value=details id="details"}}
  </div>
  <button {{action 'saveQuestion'}}>Submit</button>
</form>
